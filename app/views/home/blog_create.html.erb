
<div class="total">
      <h1 class="logo-img1">BLOG</h1>
        <div class="drop_down">
            <ul>
             
                <%if session[:user_id] !=nil%>
                    <li class="user_pers">
                        <i class="fa-solid fa-user logout"></i>
                        <% logged_user=User.find(session[:user_id]) %>
                            <%= logged_user["name"]%>
                                <ul class="dropdown_logout">
                                <li><a href="#">Profile</a></li>
                                    <li><a href="/logout">Logout</a></li>
                                </ul>
                    </li>
                    <%else%>
                        <a href="/login" class="login_btn">SIGN IN</a>
                        <a href="/signup" class="signup_btn">SIGN UP</a>
                        <%end%>


        </div>
</div>
<h1>Blog Creation</h1>  
    <form action="/create_blog" method="post" enctype="multipart/form-data">
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
    <input type="text" placeholder="Enter the Title" name="home[blog_title]" required>
    <input type="text" placeholder="Description" name="home[blog_description]" required>
    <input type="file" placeholder="Enter the image" name="home[blog_image]" required>
    <input type="submit">
</form>
<a href="listblog">Blog List</a>